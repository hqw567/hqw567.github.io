{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"types": ["vite/client"],
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"~/*": ["./*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
